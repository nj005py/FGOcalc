<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/status_bar"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"/>

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/aw_srl_refresh"
        android:layout_width="0dp"
        android:layout_height="match_parent">


        <org.phantancy.fgocalc.view.ProgressWebView
            android:id="@+id/aw_wv_web"
            android:layout_width="0dp"
            android:layout_height="match_parent"/>

    </android.support.v4.widget.SwipeRefreshLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/aw_fab_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/sh_back"
        android:clickable="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:backgroundTint="@color/colorTransparentBlue"
        app:fabSize="auto"
        app:elevation="10dp" />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/aw_fab_forward"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="60dp"
        android:src="@drawable/sh_forward"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:backgroundTint="@color/colorTransparentBlue"
        app:fabSize="auto"
        app:elevation="10dp" />

</android.support.constraint.ConstraintLayout>