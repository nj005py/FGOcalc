<resources>

    <!-- Base application theme. -->
    <style name="BaseAppTheme" parent="Theme.AppCompat.Light.NoActionBar"></style>

    <style name="AppTheme" parent="BaseAppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorGrayHard</item>
        <item name="colorPrimaryDark">@color/colorGrayHard</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:listDivider">@drawable/divider_colorful</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowActivityTransitions">true</item>
    </style>

    <style name="SplashTheme" parent="@android:style/Theme.Black.NoTitleBar.Fullscreen">
        <item name="android:windowBackground">@drawable/splash</item>
    </style>

    <style name="TransTheme" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <!--横线-->
    <style name="line_x">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/colorLightGray</item>
    </style>

    <!--竖线-->
    <style name="line_y">
        <item name="android:layout_width">0.5dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/colorLightGray</item>
    </style>

    <!--LinearLayout style-->

    <style name="ll_match_width_horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ll_match_width_vertical">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="android:gravity">center</item>
    </style>

    <!--EditText 常规样式-->
    <style name="et_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">@drawable/sh_stroke</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:textColorHint">#cecece</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textCursorDrawable">@null</item>
    </style>

    <style name="et_trump" parent="et_common">
        <item name="android:layout_weight">1.0</item>
        <item name="android:inputType">numberDecimal</item>
    </style>

    <style name="rb_common">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">20dp</item>
        <item name="android:paddingRight">20dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/se_rb_gray</item>
        <item name="android:textColor">@drawable/se_textcolor</item>
    </style>

    <style name="rb_atk">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/se_rb_gray_grayhard_noradius</item>
        <item name="android:textColor">@drawable/se_textcolor</item>
    </style>

    <style name="rb_np_charge" parent="rb_atk">
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="tv_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">14dp</item>
    </style>

    <style name="tv_percent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2.0</item>
        <item name="android:text">%</item>
    </style>

    <style name="tv_screen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@color/colorGrayHard</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorWhiteGray</item>
    </style>

    <style name="tv_buff_shortcut">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">12dp</item>
        <item name="android:textColor">@color/colorWhiteGray</item>
    </style>

    <style name="cb_np">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">5dp</item>
        <item name="android:paddingBottom">5dp</item>
        <item name="android:gravity">center</item>
        <item name="android:button">@null</item>
        <item name="android:background">@drawable/se_rb_gray_grayhard_noradius</item>
        <item name="android:textColor">@drawable/se_textcolor</item>
    </style>

    <!--ImageView style-->
    <style name="iv_trump">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
    </style>

    <style name="iv_buff_shortcut">
        <item name="android:layout_width">30dp</item>
        <item name="android:layout_height">30dp</item>
        <item name="android:layout_gravity">center_vertical</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        //Dialog的windowFrame框为无
        <item name="android:windowFrame">@null</item>
        //是否浮现在activity之上
        <item name="android:windowIsFloating">true</item>
        //是否半透明
        <item name="android:windowIsTranslucent">true</item>
        //是否显示title
        <item name="android:windowNoTitle">true</item>
        //设置dialog的背景
        <item name="android:background">@android:color/transparent</item>
        //显示区域背景是否透明
        <item name="android:windowBackground">@android:color/transparent</item>
        //就是用来控制灰度的值，当为1时，界面除了我们的dialog内容是高亮显示的，dialog以外的区域是黑色的，完全看不到其他内容，系统的默认值是0.5
        <item name="android:backgroundDimAmount">0.5</item>
        //显示区域以外是否使用黑色半透明背景
        <item name="android:backgroundDimEnabled">true</item>
    </style>

    <style name="progress_bar_vertical">
        <item name="android:indeterminateOnly">false</item>
        <item name="android:progressDrawable">@drawable/progress_bar_vertical</item><!-- progress_horizontal -->
        <item name="android:indeterminateDrawable">@android:drawable/progress_indeterminate_horizontal</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:maxHeight">20dp</item>
    </style>

    <style name="sp_command_card">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@color/colorGrayHard</item>
    </style>

    <style name="sp_screen">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">38dp</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:padding">0dp</item>
    </style>

    <style name="btn_calc">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1.0</item>
        <item name="android:background">@drawable/se_gray_dark</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

</resources>
