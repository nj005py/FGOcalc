<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBlack">

    <TextView
        style="@style/tv_common"
        android:layout_marginTop="30dp"
        android:text="转动手机，咕哒子的脑袋也会转的..."
        android:textColor="@color/colorWhite"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/ef_summon_shield_tmp00"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <org.phantancy.fgocalc.view.CompassView
        android:id="@+id/ac_cv_compass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/ac_btn_summon"
        android:layout_width="120dp"
        android:layout_height="50dp"
        android:background="@drawable/ticket2"
        android:text="选这个方向"
        android:textSize="13dp"
        android:textColor="@color/colorWhite"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/ac_iv_guda"/>

    <ImageView
        android:id="@+id/ac_iv_guda"
        android:layout_width="80dp"
        android:layout_height="90dp"
        android:src="@drawable/guda"
        android:rotation="180"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="咕哒子提醒你快点决定方向！"
        android:textColor="@color/colorWhiteGray"
        android:textSize="14dp"
        app:layout_constraintLeft_toRightOf="@+id/ac_iv_guda"
        app:layout_constraintBottom_toBottomOf="parent"/>

</android.support.constraint.ConstraintLayout>